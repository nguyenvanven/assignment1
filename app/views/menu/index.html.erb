<div class="container">
	<h1>Menu</h1>
	<div class="nav nav-pills">
		<%Section.all.each do |section| %>
			<li class="nav-item">
				<%= link_to section.name, menu_path(section:section.name) ,
					class:"nav-link #{'active' if params[:section] == section.name}" %>
			</li>
		<%end%>
	</div>
	<div class="card">
		<% @food_items.each do |food_item| %>
			<%= render food_item %>
		<%end%>
	</div>
</div>
