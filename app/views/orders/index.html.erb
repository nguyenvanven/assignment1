<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Customername</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phonenumber</th>
      <th>Food item</th>
      <th>Amount</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.customerName %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.phonenumber %></td>
        <td><%= order.food_item_id %></td>
        <td><%= order.amount %></td>
        <td><%= order.total %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

